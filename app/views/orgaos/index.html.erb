<%- model_class = Orgao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:sigla) %></th>
      <th><%= model_class.human_attribute_name(:id_tipo_orgao) %></th>
      <th><%= model_class.human_attribute_name(:id_orgao_legislativo) %></th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @orgaos.each do |orgao| %>
      <tr>
        <td><%= link_to orgao.id, orgao_path(orgao) %></td>
        <td><%= orgao.name %></td>
        <td><%= orgao.sigla %></td>
        <td><%= orgao.id_tipo_orgao %></td>
        <td><%= orgao.id_orgao_legislativo %></td>
        <td><%= orgao.descricao %></td>
        <td><%=l orgao.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_orgao_path(orgao), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      orgao_path(orgao),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_orgao_path,
            :class => 'btn btn-primary' %>
